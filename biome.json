{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"indentWidth": 4
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"suspicious": {
				"noImplicitAnyLet": "warn",
				"noDuplicateObjectKeys": "warn"
			},
			"performance": {
				"noDelete": "error"
			},
			"complexity": {
				"noUselessSwitchCase": "warn",
				"noUselessTypeConstraint": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn"
			}
		}
	},
	"files": {
		"ignore": ["dist", "package.json", ".turbo", ".next", ".cache"]
	}
}
